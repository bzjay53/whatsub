{
  "manifest_version": 3,
  "name": "WhatsUp",
  "version": "1.0.0",
  "description": "실시간 자막 및 번역 서비스",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "tabCapture",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "popup/*",
      "styles.css"
    ],
    "matches": ["*://*.youtube.com/*"]
  }]
} 